# ===========================================
# Jimi IoT Gateway - Exemplo de Configuração
# ===========================================
# Copie este arquivo para .env e ajuste os valores

# Ambiente da aplicação
APP_ENV=production
LOG_LEVEL=INFO
METRICS_ENABLED=true
STACK_MODE=iothub

# Token de validação de origem (webhooks)
WEBHOOK_TOKEN=ALTERE_ESTE_TOKEN

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=ALTERE_ESTA_SENHA
GRAFANA_ROOT_URL=http://localhost:3000

# Prometheus
PROMETHEUS_PORT=9090

# Loki
LOKI_PORT=3100

# Alertmanager
ALERTMANAGER_PORT=9093

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s
